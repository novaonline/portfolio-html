---
import "../styles/tailwind.css";
import ThemeToggle from "../components/ThemeToggle.astro";

const {
  title = "Emmanuel Quagraine | Portfolio",
  description,
  siteName = "Emmanuel Quagraine",
} = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <script is:inline>
      (function () {
        try {
          var stored = localStorage.getItem("theme");
          var prefersDark =
            window.matchMedia &&
            window.matchMedia("(prefers-color-scheme: dark)").matches;
          var useDark = stored ? stored === "dark" : prefersDark;
          document.documentElement.classList[useDark ? "add" : "remove"](
            "dark"
          );
        } catch (_) {
          /* ignore */
        }
      })();
    </script>
    <title>{title}</title>
    {description && <meta name="description" content={description} />}
    <slot name="head" />
  </head>
  <body
    class="min-h-screen bg-slate-50 text-slate-900 antialiased dark:bg-slate-950 dark:text-slate-100 font-sans"
  >
    <header
      class="mx-auto flex max-w-4xl items-center justify-between px-4 py-6"
    >
      <a
        href="/"
        class="font-semibold tracking-tight hover:text-slate-700 dark:hover:text-slate-200"
        >{siteName}</a
      >
      <nav class="flex items-center gap-4 text-sm">
        <a href="/experiences/" class="hover:underline">Experiences</a>
        <ThemeToggle />
      </nav>
    </header>
    <main class="mx-auto max-w-4xl px-4 pb-16">
      <slot />
    </main>
    <footer
      class="mx-auto max-w-4xl px-4 pb-8 text-xs text-slate-500 dark:text-slate-400"
    >
      <p class="no-print">
        &copy; {new Date().getUTCFullYear()}
        {siteName}. Built with Astro.
      </p>
    </footer>
  </body>
</html>
