<button
  id="theme-toggle"
  type="button"
  class="flex items-center justify-center rounded-full border border-slate-300 bg-white p-2 text-slate-700 shadow-sm transition hover:border-slate-500 hover:text-slate-900 dark:border-slate-700 dark:bg-slate-900 dark:text-slate-200 dark:hover:border-slate-500"
  aria-label="Toggle color theme"
  aria-pressed="false"
>
  <span class="sr-only">Toggle between light and dark theme</span>
  <svg
    data-icon="sun"
    aria-hidden="true"
    class="h-4 w-4"
    viewBox="0 0 24 24"
    fill="none"
    stroke="currentColor"
    stroke-width="2"
    stroke-linecap="round"
    stroke-linejoin="round"
  >
    <circle cx="12" cy="12" r="5" />
    <line x1="12" y1="1" x2="12" y2="3" />
    <line x1="12" y1="21" x2="12" y2="23" />
    <line x1="4.22" y1="4.22" x2="5.64" y2="5.64" />
    <line x1="18.36" y1="18.36" x2="19.78" y2="19.78" />
    <line x1="1" y1="12" x2="3" y2="12" />
    <line x1="21" y1="12" x2="23" y2="12" />
    <line x1="4.22" y1="19.78" x2="5.64" y2="18.36" />
    <line x1="18.36" y1="5.64" x2="19.78" y2="4.22" />
  </svg>
  <svg
    data-icon="moon"
    aria-hidden="true"
    class="hidden h-4 w-4"
    viewBox="0 0 24 24"
    fill="none"
    stroke="currentColor"
    stroke-width="2"
    stroke-linecap="round"
    stroke-linejoin="round"
  >
    <path
      d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"
    />
  </svg>
</button>

<script>
  // @ts-nocheck
  const storageKey = "theme";
  const toggle = document.getElementById("theme-toggle");
  if (!toggle) {
    console.warn("Theme toggle button not found");
  } else {
    const docEl = document.documentElement;
    const sunIcon = toggle.querySelector('[data-icon="sun"]');
    const moonIcon = toggle.querySelector('[data-icon="moon"]');

    /**
     * @param {"light" | "dark"} mode
     */
    const setIconState = (mode) => {
      const isDark = mode === "dark";
      sunIcon?.classList.toggle("hidden", isDark);
      moonIcon?.classList.toggle("hidden", !isDark);
      toggle.setAttribute("aria-pressed", String(isDark));
      toggle.setAttribute("aria-label", isDark ? "Switch to light theme" : "Switch to dark theme");
    };

    /**
     * @param {"light" | "dark"} mode
     */
    const apply = (mode) => {
      const normalized = mode === "dark" ? "dark" : "light";
      docEl.classList.toggle("dark", normalized === "dark");
      try {
        localStorage.setItem(storageKey, normalized);
      } catch (_) {
        // Ignore storage failures
      }
      setIconState(normalized);
      toggle.dataset.theme = normalized;
    };

    /**
     * @returns {"light" | "dark"}
     */
    const resolveInitial = () => {
      let saved = null;
      try {
        saved = localStorage.getItem(storageKey);
      } catch (_) {
        // No stored value available
      }
      if (saved === "light" || saved === "dark") {
        return saved;
      }
      const prefersDark =
        typeof window.matchMedia === "function" &&
        window.matchMedia("(prefers-color-scheme: dark)").matches;
      return prefersDark ? "dark" : "light";
    };

    apply(resolveInitial());

    toggle.addEventListener("click", () => {
      const next = toggle.dataset.theme === "dark" ? "light" : "dark";
      apply(next);
    });
  }
</script>
