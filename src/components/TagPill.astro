---
const { name, kind } = Astro.props as {
  name: string;
  kind: "skill" | "topic";
};

const base = "inline-flex items-center gap-1 rounded-full px-2 py-0.5 text-xs ring-1";
const cls =
  kind === "skill"
    ? `${base} bg-emerald-50 text-emerald-700 ring-emerald-200 dark:bg-emerald-900/20 dark:text-emerald-300`
    : `${base} bg-slate-100 text-slate-700 ring-slate-200 dark:bg-slate-800 dark:text-slate-300`;
const label = `${kind === "skill" ? "Resume skill" : "Topic"}: ${name}`;
---
<span class={cls} aria-label={label}>
  <svg width="6" height="6" viewBox="0 0 6 6" aria-hidden="true" class="text-current">
    <circle cx="3" cy="3" r="3" fill="currentColor" />
  </svg>
  {name}
</span>
